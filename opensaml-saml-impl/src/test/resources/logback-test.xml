<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%-5level %logger{0} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <logger name="org.opensaml.messaging">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml.core.xml.persist">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml.saml.metadata">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml.saml.saml2.assertion">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml.storage">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml.xmlsec.impl">
        <level value="DEBUG"/>
    </logger>
    <logger name="org.opensaml.saml.security.impl">
        <level value="DEBUG"/>
    </logger>
    
    <logger name="org.opensaml">
        <level value="INFO"/>
    </logger>
    
    <logger name="org.opensaml.saml">
        <level value="DEBUG"/>
    </logger>

    <root>
        <appender-ref ref="STDOUT"/>
        <level value="WARN"/>
    </root>
    
</configuration>
